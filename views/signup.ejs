<%- include ("./partials/header") %>
<%- include ("./nav") %>
<div class="form-container">
  <h2 class="form-item" id="h2-signup">SIGN UP</h2>
  <form class="form-item" id="form">
    
    <label for="email">Email</label>
    <input type="text" name="email" id="email" required>
    <div class="error-email"></div>
    
    <label for="password">Password</label>
    <input type="password" name="password" id="password" required>
    <div class="error-password"></div>
    
    <label for="username">Username</label>
    <input type="text" name="username" id="username" required>
    <div class="error-username"></div>

    <button class="btn btn-outline-secondary">Submit</button>
  </form>
</div>

<script>
  const form = document.querySelector("#form")
  const emailError = document.querySelector(".error-email")
  const passwordError = document.querySelector(".error-password")
  const usernameError = document.querySelector(".error-username")
  form.addEventListener("submit", async (e) => {
    e.preventDefault()
    emailError.innerHTML = ""
    passwordError.innerHTML = ""
    usernameError.innerHTML = ""
    const email = document.getElementById("email").value
    const password = document.getElementById("password").value
    const username = document.getElementById("username").value
    try {
      const result = await fetch("/signup", {
      method: "POST",
      body: JSON.stringify({email,password,username}),
      headers: {"Content-Type":"application/json"}
    })
      const data = await result.json()
      if(data.errors){
        emailError.innerHTML = data.errors.email
        passwordError.innerHTML = data.errors.password
        usernameError.innerHTML = data.errors.username
      }
      if(data.user){
        location.assign("/avatar")
      }
    } catch (error) {
      console.log(error)
    }
  })
</script>



